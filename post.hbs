{{!< default}}
{{> header}}

<main class="main_dkcl" role="main">
  {{#post}}
  <article class="article_dkcl" role="article" itemscope itemtype="http://schema.org/Article">
    <header class="postheader_dkcl">
      <time class="date_dkcl" datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">{{date format='dddd DD MMM YYYY'}}</time>
      <h1 class="posttitle_dkcl" itemprop="headline">{{title}}</h1>
    </header>
    <div class="postcontent_dkcl" itemprop="articleBody">
      {{content}}
    </div>
    {{#if tags}}
      <div class="posttags_dkcl">
        Tags: {{tags separator=" | "}}
      </div>
    {{/if}}
      <div class="sharepost_dkcl">
        <h4 class="share_dkcl">Share this post: &nbsp;</h4>
        <a class="share_dkcl icon-twitter" target="_blank" href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"><span class="hidethis_dkcl">Twitter</span></a>
        <a class="share_dkcl icon-facebook" target="_blank" href="http://www.facebook.com/sharer.php?u={{url absolute="true"}}"><span class="hidethis_dkcl">Facebook</span></a>
        <a class="share_dkcl icon-gplus" target="_blank" href="https://plus.google.com/share?url={{url absolute="true"}}"><span class="hidethis_dkcl">Google+</span></a>
      </div>
        {{#if author}}
          <footer class="postfooter_dkcl">
            <address itemscope itemtype="http://schema.org/Person">
            {{#if author.image}}
              <div class="authorimage_dkcl"><img src="{{author.image}}" itemprop="image" /></div>
            {{/if}}
            <h4 class="authorname_dkcl"><span itemprop="author">{{author.name}}</span></h4>
            {{#if author.website}}
              <div class="authorwebsite_dkcl"><a href="{{author.website}}" itemprop="url">{{author.website}}</a></div>
            {{/if}}
            </address>
            <div class="authorbio_dkcl">
              <p>{{author.bio}}</p>
            </div>
          </footer>
        {{/if}}
  </article>
  {{/post}}
  {{#if pagination}}
    <div class="pagination_dkcl">
      {{{pagination}}}
    </div>
  {{/if}}
</main>

{{> footer}}
